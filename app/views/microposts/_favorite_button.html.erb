


<% if current_user.is_favorite?(micropost22) %>

 
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost22.id),html: { method: :delete }) do |f| %>

  <%= hidden_field_tag :micropost_id, micropost22.id %>
  <%= f.submit 'お気に入り取り消し', class: 'btn btn-danger btn-xs' %>
  <% end %>
  
  
  
<% else %>

  <%= form_for(current_user.favorites.build, url: favorites_path) do |f|  %>
  <%= hidden_field_tag :micropost_id, micropost22.id %>
  <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-xs' %>
  
  <% end %>
  
<% end %>


